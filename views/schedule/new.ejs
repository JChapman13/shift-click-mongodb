<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css"
      rel="stylesheet"
    />
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@332&display=swap");
    </style>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="mdc-top-app-bar">
      <div class="mdc-top-app-bar__row">
        <section
          class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start"
        >
          <span class="mdc-top-app-bar__title">SHIFT+CLICK</span>
        </section>
        <section
          class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end"
          role="toolbar"
        >
        <a href="/"><button
          class="material-icons mdc-top-app-bar__action-item mdc-icon-button"
          aria-label="home"
        >
          home
        </button></a>
          <a href="/roster"
            ><button
              class="
                material-icons
                mdc-top-app-bar__action-item
                mdc-icon-button
              "
              aria-label="Search"
            >
              people
            </button></a
          >
          <button
            class="material-icons mdc-top-app-bar__action-item mdc-icon-button"
            aria-label="Options"
          >
            date_range
          </button>
  
        </section>
      </div>
    </header>
    <main class="mdc-top-app-bar--fixed-adjust mdc-card">
      <div class="mdc-data-table">
        <h3>Week</h3>
        <form action="/schedule" Method="POST">
        <input name="week_id" type="week"></input>
        <div class="mdc-data-table__table-container">
          <table class="mdc-data-table__table">
              <tr class="mdc-data-table__header-row">
                <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Employee
                </th>
               <th
                  class="
                    mdc-data-table__header-cell
                    mdc-data-table__header-cell--numeric
                  "
                  role="columnheader"
                  scope="col"
                >
                  Monday
                </th>
               <th
                  class="
                    mdc-data-table__header-cell
                    mdc-data-table__header-cell--numeric
                  "
                  role="columnheader"
                  scope="col"
                >
                  Tuesday
                </th>
               <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Wednesday
                </th>
               <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Thursday
                </th>
               <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Friday
                </th>
               <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Saturday
                </th>
               <th
                  class="mdc-data-table__header-cell"
                  role="columnheader"
                  scope="col"
                >
                  Sunday
                </th>
              </tr>
            </thead>
            <tbody class="mdc-data-table__content">
              <% employees.forEach(function(e) { %>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">
                  <%= e.first_name %> <%= e.last_name %>
                </th>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-monday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-monday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-tuesday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-tuesday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-wednesday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-wednesday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-thursday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-thursday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-friday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-friday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-saturday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-saturday-end" placeholder="End Time" />
                </td>
                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                  <input type="time" name="<%= e._id %>-sunday-start" placeholder="Start Time" />
                  <input type="time" name="<%= e._id %>-sunday-end" placeholder="End Time" />
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <input type="submit" value="Add Schedule">
        </form>
        </div>
      </div>
    </main>
  </body>
</html>
